{
  "name": "vscode-dev-translator",
  "displayName": "Dev Translator",
  "description": "Translate for developers",
  "version": "0.0.4",
  "publisher": "bmongo",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/Bmongo/vscode-translator/blob/main/README.md",
  "icon": "./doc/images/vscode-icon.png",
  "bugs": {
    "url": "https://github.com/Bmongo/vscode-translator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bmongo/vscode-translator"
  },
  "keywords": [
    "vscode extension",
    "translate",
    "translator",
    "翻译",
    "变量",
    "注释"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Dev Translator",
      "type": "object",
      "properties": {
        "devTranslator.translator": {
          "type": "string",
          "default": "bing",
          "enum": [
            "bing",
            "google"
          ]
        },
        "devTranslator.from": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "zh-CN",
            "en",
            "ta"
          ]
        },
        "devTranslator.to": {
          "type": "string",
          "default": "zh-CN",
          "enum": [
            "zh-CN",
            "en",
            "ta"
          ]
        },
        "devTranslator.language": {
          "type": "string",
          "default": "auto",
          "description": "The language of the extension will affect the language of the extension",
          "enum": [
            "auto",
            "zh-cn",
            "en",
            "ta"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "devTranslator.toEnglish",
        "title": "Translate to English",
        "category": "Dev Translator"
      },
      {
        "command": "devTranslator.toChinese",
        "title": "Translate to Chinese",
        "category": "Dev Translator"
      },
      {
        "command": "devTranslator.toOtherLanguage",
        "title": "Translate to ...",
        "category": "Dev Translator"
      },
      {
        "command": "devTranslator.openTranslationPanel",
        "title": "Open Translation Panel",
        "category": "Dev Translator"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "lint-staged",
    "test": "vscode-test",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "git-cz",
    "cspell": "cspell lint --dot --gitignore --color --cache --show-suggestions src/**"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write --cache --no-error-on-unmatched-pattern"
    ],
    "*.{mjs,js,ts}": [
      "eslint --fix",
      "prettier --write --cache"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "cspell": "^9.1.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "bing-translate-api": "^4.1.0",
    "franc": "^6.2.0",
    "got": "^12.1.0"
  }
}
